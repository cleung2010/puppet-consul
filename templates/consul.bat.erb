REM Consul service installer using NSSM

set CONSULPATH=<%= scope.lookupvar('consul::bin_dir') %>\consul
set CONSULCONF=<%= scope.lookupvar('consul::config_dir') %>

nssm install consul "%CONSULPATH%\consul.exe" "agent -config-dir \"%CONSULCONF%\" " 
nssm set consul AppStdout "%CONSULPATH%\log\log.txt"
nssm set consul AppStderr "%CONSULPATH%\log\log.txt"
nssm set consul AppRotateBytes 10485760
nssm set consul AppRotateFiles 1
nssm set consul AppRotateOnline 1

